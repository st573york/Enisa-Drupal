{{ attach_library('enisa/main') }}
{{ attach_library('enisa/alert') }}
{{ attach_library('enisa/modal') }}
{{ attach_library('enisa/report-and-data') }}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">{{ 'Home'|t }}</a></li>
      <li class="breadcrumb-item active">{{ 'Index - Reports & Data'|t }}</li>
  </ol>
</nav>

<h1>{{ 'Reports & Data'|t }}</h1>

<main id="enisa-main" class="bg-white">
  <div class="container-fluid">

    {% include '@enisa/components/alert.html.twig' with {'type': 'pageAlert'} %}

    <div class="row mt-3">
      <div class="col-12 ps-0 pe-0">
        <div class="table-section col-12 mt-2">
          <div class="row">
            <div class="col-12 col-lg-6 col-xl-6">
              <div class="d-flex gap-2">
                <div>
                  <h2 class="mt-2">{{ 'Year'|t }} -</h2>
                </div>
                <div class="mt-1">
                  {% include '@enisa/components/year-dropdown.html.twig' with {'years': years} %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {% if (data_available and (loaded_index_data.eu_published or loaded_index_data.ms_published)) %}
      <div class="row mt-5">
        <div class="col-12 table-section">
          <h2 class="">Reports & Data</h2>
          <div class="d-flex justify-content-end {{ (not is_admin and not is_enisa) ? 'd-none' : '' }}">
            <div class="d-flex gap-2">
              <label for="country" style="margin-top: 6.5px;">Country:</label>
              <select id="country" class="form-select mb-2" aria-label="Select Country">
                {% for country_index in countries_index %}
                  <option value="{{ country_index.country.id }}" item-id="{{ country_index.id }}">{{ country_index.country.name }}</option>
                {% endfor %}
              </select>
            </div>
          </div>
          <table id="reports-and-data-table" class="display enisa-table-group">
            <thead>
              <tr>
                <th>{{ 'Type'|t }}</th>
                <th>{{ 'Actions'|t }}</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    {% endif %}

    <div class="modal fade" id="pageModal" tabindex="-1" aria-labelledby="pageModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header p-3 justify-content-between">
            <button type="button" class="btn btn-enisa" href="javascript:;" onclick="resetSaveReportButton();" data-bs-dismiss="modal">{{ 'Close'|t }}</button>
            <button type="button" class="btn btn-enisa" id="export-pdf" href="javascript:;" onclick="saveReportPDF();" class="d-flex justify-content-between" disabled> {{ 'Loading...'|t }}</button>
          </div>
          <div class="modal-body p-3">
            <div class="row">
              <div class="col-12 mt-2">
                <div class="row" id="frameContainer"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>
